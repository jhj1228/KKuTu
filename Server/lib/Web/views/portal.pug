extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='float: left; width: 100%;')
		div(style='width: 200px; margin: 0 auto; height: 50px;')
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src='/img/kkutu/short_logo.png')
		div#menu-bar(style='float: right; margin-top: 105px;')
			a(target='_blank', href='https://forms.gle/2jTaZfiwgYQGJhy7A', style='background-color: #6438B0; width:146px;')= L('wordadd')
			a(target='_blank', href='http://legendkkutu.kro.kr/usecode.html', style='background-color: #51A351; width:146px;')= L('lgkusecode')
		div.jjoriping(style='margin-top: 40px; width: 340px; margin: 0 auto;')
			img.jjoObj.jjoEyeL(src='/img/jjoeyeL.png')
			img.jjoObj.jjoNose(src='/img/jjonose.png', style='left: 100px;')
			img.jjoObj.jjoEyeR(src='/img/jjoeyeR.png', style='left: 200px;')
			div.jjoDisplayBar(style='width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div(style='float: left; margin-top: -50px; width: 32%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: right; margin-top: -120px; width: 70%;')
	div(style='float: right; width: 583px; height: 300px; border: 2px solid rgba(0,0,0,0.5); margin-top: 10px; background-color: rgba(0,0,0,0.2);')
		div#name <i class="fas fa-history"></i> 업데이트 내용
		iframe#kkutu-bulletin(width='100%', height='270px', src='/kkutu_bulletin.html')
	div(style='float: left; width: 406px; height: 300px; border: 2px solid rgba(0,0,0,0.5); margin-top: 10px; background-color: rgba(0,0,0,0.2);')
		div#name(style='width:calc(101.5% - 4px);') <i class="fas fa-bullhorn"></i> 공지사항
		iframe#kkutu-bulletin(width='100%', height='180px', src='/kkutu_gongji.html')
	+separator(10)

block Bottom
	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('designSupport')
	div.bottom-legal!= L('etcSupport')
